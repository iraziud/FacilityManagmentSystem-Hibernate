<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
 	<session-factory>		
 		<!-- SQL dialect - generate SQL for a particular database -->
 		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

 		<!-- Use this for testing -->
 		<!-- <property name="dialect">org.hibernate.dialect.H2Dialect</property> -->
 
 		<!-- Echo all executed SQL statements -->
 		<property name="hibernate.show_sql">true</property>
 		<property name="hibernate.hbm2ddl.auto">update</property>
 		<property name="hibernate.transaction.flush_before_completion">true</property>
 		<property name="hibernate.transaction.auto_close_session">true</property>
 
		<!-- Mapping resource configuration files -->
 		<mapping resource="com/fms/vo/Address.hbm.xml"/> 
 		<mapping resource="com/fms/vo/Floors.hbm.xml"/>
 		<mapping resource="com/fms/vo/Facility.hbm.xml"/>
 		<mapping resource="com/fms/vo/Inspection.hbm.xml"/>
 		<mapping resource="com/fms/vo/Maintenance.hbm.xml"/>
 		<mapping resource="com/fms/vo/Person.hbm.xml"/>
 		<mapping resource="com/fms/vo/Phone.hbm.xml"/>
 		<mapping resource="com/fms/vo/Unit.hbm.xml"/>

 	</session-factory>
 </hibernate-configuration>